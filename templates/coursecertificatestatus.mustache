{{#showdata}}
    <table class="generaltable dataTable no-footer" id="courseparticipants" role="grid" aria-describedby="courseparticipants">
        <thead>
            <tr role="row">
                <th>{{#str}}studentname,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}surname,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}email,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}studentid,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}enrolldate,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}completedate,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}coursestatus,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}activity,mod_pokcertificate{{/str}}</th>
                {{#showtemplatetype}}
                    <th>{{#str}}typeofcerti,mod_pokcertificate{{/str}}</th>
                {{/showtemplatetype}}
                <th>{{#str}}senttopok,mod_pokcertificate{{/str}}</th>
                <th>{{#str}}checkstatus,mod_pokcertificate{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#data}}
                <tr>
                    <td>{{firstname}}</td>
                    <td>{{lastname}}</td>
                    <td>{{email}}</td>
                    <td>{{studentid}}</td>
                    <td class="blue-enrolldate">{{enrolldate}}</td>
                    <td class="blue-completedate">{{completedate}}</td>
                    <td class="{{coursestatus}}-coursestatus">{{coursestatus}}</td>
                    <td>{{activity}}</td>
                    {{#showtemplatetype}}
                        <td class="{{certificatetype}}-certificatetype">{{certificatetype}}</td>
                    {{/showtemplatetype}}
                    <td class="{{senttopok}}-senttopok">{{senttopok}}</td>
                    {{#status}}
                        {{#certificateurl}}
                            <td>
                                <a href="{{certificateurl}}">
                                    <span class='viewcertificate'>
                                        <i class="fa fa-certificate" aria-hidden="true"></i>
                                    </span>
                                </a>
                            </td>
                        {{/certificateurl}}
                        {{^certificateurl}}
                            <td style="font-size: smaller;color: darkslategrey;">{{#str}}mailpending,mod_pokcertificate{{/str}}</td>
                        {{/certificateurl}}
                    {{/status}}
                    {{^status}}
                    {{^certificateurl}}
                        <td >-</td>
                    {{/certificateurl}}
                    {{/status}}
                </tr>
            {{/data}}
        </tbody>
    </table>
{{/showdata}}
{{^showdata}}
    <div class="alert alert-info alert-block fade in  alert-dismissible" role="alert" data-aria-autofocus="true">
         {{#str}}norecordavailable, mod_pokcertificate{{/str}}
    </div>
{{/showdata}}
